<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <div class="py">
        <form method="POST" action="/">
            <input type="text" name="name" placeholder="Enter name" class="form-control mb-2" required>
            <input type="text" name="address" placeholder="Enter address" class="form-control mb-2" required>
            <div class="input-group mb-3">
                <select class="form-select" name="card" id="inputGroupSelect02" required>
                    <option selected>Card</option>
                    <option value="Apl">Apl</option>
                    <option value="Bpl">Bpl</option>
                </select>
                <label class="input-group-text" for="inputGroupSelect02">Options</label>
            </div>
            <div class="input-group mb-3">
                <select class="form-select" name="gender" id="inputGroupSelect03" required>
                    <option selected>gender</option>
                    <option value="male">male</option>
                    <option value="female">female</option>
                </select>
                <label class="input-group-text" for="inputGroupSelect03">Gender</label>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
    <table>
        <thead>
            <tr>
                <th>name</th>
                <th>address</th>
                <th>card</th>
                <th>gender</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((item)=>{ %>
                <tr>
                    <td>
                        <%=item.name %>
                    </td>
                    <td>
                        <%=item.address %>
                    </td>
                    <td>
                        <%=item.card %>
                    </td>
                    <td>
                        <%=item.gender %>
                    </td>
                </tr>
                <% })%>
        </tbody>
    </table>
</body>

</html>