<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ration Users List</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f9;
        }

        h3 {
            font-weight: 600;
            color: #212529;
        }

        .table thead th {
            background-color: #0d6efd;
            color: white;
            text-align: center;
            vertical-align: middle;
            white-space: nowrap;
        }

        .table tbody td {
            vertical-align: middle;
            white-space: nowrap;
        }

        .badge {
            font-size: 0.85rem;
            padding: 6px 10px;
            border-radius: 6px;
        }

        .btn-info {
            background-color: #0dcaf0;
            border: none;
            color: #000;
        }

        .btn-success {
            border: none;
        }

        .btn-warning {
            border: none;
            color: white;
        }

        .modal-content {
            border-radius: 10px;
        }

        .alert-info {
            background-color: #e7f5ff;
            border-left: 4px solid #0d6efd;
        }

        /* ✅ MOBILE FIXES */
        @media (max-width: 576px) {
            h3 {
                font-size: 1.3rem;
                text-align: center;
            }

            .action-btns {
                display: grid;
                gap: 6px;
            }
        }
    </style>
</head>

<body>

<%- include('partials/navbar') %>

<div class="container-fluid container-lg mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
        <h3>Ration Card Holders</h3>

        <a href="/admin/add-user" class="btn btn-success mt-2 mt-md-0">
            Add New User
        </a>
    </div>

  
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle text-center">
            <thead>
                <tr>
                    <th>Head Name</th>
                    <th>Card No</th>
                    <th>Card Type</th>
                    <th>Gender</th>
                    <th>Mobile</th>
                    <th>Details</th>
                    <th>Family</th>
                    <th>Distribution</th>
                </tr>
            </thead>

            <tbody>
            <% users.forEach(item => { %>
                <tr>
                    <td><%= item.headName %></td>
                    <td><%= item.cardNumber %></td>

                    <td>
                        <% if (item.cardType === 'APL') { %>
                            <span class="badge bg-primary">APL</span>
                        <% } else if (item.cardType === 'BPL') { %>
                            <span class="badge bg-danger">BPL</span>
                        <% } else if (item.cardType === 'AAY') { %>
                            <span class="badge bg-warning text-dark">AAY</span>
                        <% } else if (item.cardType === 'PHH') { %>
                            <span class="badge bg-success">PHH</span>
                        <% } %>
                    </td>

                    <td><%= item.gender %></td>
                    <td><%= item.mobile %></td>

                    <td>
                        <button class="btn btn-sm btn-info"
                            data-bs-toggle="modal"
                            data-bs-target="#userModal-<%= item._id %>">
                            View
                        </button>
                    </td>

                    <td>
                        <a href="/admin/family/<%= item._id %>" class="btn btn-sm btn-primary">
                            Members
                        </a>
                    </td>

                    <td class="action-btns">
                        <a href="/admin/entitlements/<%= item._id %>" class="btn btn-sm btn-success">
                            Collect
                        </a>
                        <button type="button" class="btn btn-sm btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#resetModal-<%= item._id %>">
                            Reset
                        </button>
                    </td>
                </tr>

                <div class="modal fade" id="resetModal-<%= item._id %>" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-info text-white">
                                <h5 class="modal-title">Monthly Reset</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong><%= item.headName %></strong></p>
                                <p>This will reset monthly ration for <strong><%= item.cardNumber %></strong>.</p>
                                <div class="alert alert-info">
                                    Monthly booking will be cleared.
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form method="POST" action="/admin/reset-purchases/<%= item._id %>">
                                    <button type="submit" class="btn btn-info text-white">
                                        Confirm Reset
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="userModal-<%= item._id %>" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-dark text-white">
                                <h5 class="modal-title">
                                    Ration Card – <%= item.headName %>
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <div class="row g-3">
                                    <div class="col-12 col-md-6">
                                        <p><strong>Card:</strong> <%= item.cardNumber %></p>
                                        <p><strong>Type:</strong> <%= item.cardType %></p>
                                        <p><strong>Gender:</strong> <%= item.gender %></p>
                                        <p><strong>Mobile:</strong> <%= item.mobile %></p>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <p><strong>House:</strong> <%= item.houseNumber %></p>
                                        <p><strong>Ward:</strong> <%= item.ward %></p>
                                        <p><strong>Panchayat:</strong> <%= item.panchayat %></p>
                                        <p><strong>District:</strong> <%= item.district %></p>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
